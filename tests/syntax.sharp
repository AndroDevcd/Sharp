import std.io.*;
import platform;
import platform.kernel;

chan := new channel<var>(UNLIMITED);
task_count := 12000;
counter := new atomic<var>{ 0 };

def foo() : var {
    for(i := 0; i < task_count; i++) {
        coroutine.builder().unconfined() = {->
           for( ;; ) {
              counter++;
              past := time.mills_time();
              delay(1000);
           }
        };
    }

    return 0;
}

def main(args: string[]) {
   past := time.mills_time();
   foo();
   println(time.mills_time()-past);
   println(counter++);
}
