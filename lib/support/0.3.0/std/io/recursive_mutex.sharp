mod std.io;

import (
    std.io.fiber
)

/**
* Created by bknun on 4/23/2023
* 
* @class recursive_lock
*
* Description:
* Allows for recursive licks on objects
*/
class recursive_mutex {
    private data: _object_;
    private recursiveLocks: var;
    private fib: fiber? = null;

    recursive_mutex(data: _object_) {
        self->data = data;
    }

    def acquire_lock() {
        data.lock_object();
        recursiveLocks++;
        fib = fiber.current();
    }

    def release_lock() {
        if(recursiveLocks >= 1 && fib == fiber.current()) {
            recursiveLocks--;

            if(recursiveLocks == 0) {
                fib = null;
                data.unlock_object();
            }
        }
    }
}
