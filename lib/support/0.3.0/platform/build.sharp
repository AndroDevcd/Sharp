mod platform;

/**
* Created by bknun on 9/2/2022
* 
* @class build
*
* Description:
* This file represents basic build information about the current running
* program and os
*/
class build {
    os: string;
    app_name: string;
    platform: string;
    version: string;

    def is_windows() : bool {
        return os == "win";
    }

    def is_linux() : bool {
        return os == "posix";
    }
}
